generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
 

}

model Device {
  id              Int         @id @default(autoincrement()) // int4 di gambar
  deviceCode      String      @unique                       // FARM-001 di gambar
  duration        Int         @default(0)                   // int4 di gambar
  lastSeen        DateTime    @default(now())               // timestamp di gambar
  pumpStatus      Boolean     @default(false)
  
  logs            SensorLog[]
}

model SensorLog {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  temperature  Float
  humidity     Float
  soilMoisture Int
  
  deviceId     Int     
  device       Device   @relation(fields: [deviceId], references: [id])
}
